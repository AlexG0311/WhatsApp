<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WhastApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WhastApp"
    
    Shell.FlyoutBehavior="Disabled"
    Title="WhastApp"
    BackgroundColor="#0b141b"
    Shell.TabBarForegroundColor="#00C853"   
    Shell.TabBarBackgroundColor="#0b141b"
    Shell.TabBarUnselectedColor="Gray"
    Shell.TabBarTitleColor="White" >

  <TabBar>
      
        <Tab Title="Chats" Icon="chat.png">
            <ShellContent ContentTemplate="{DataTemplate local:Chats}" Route="Chats" />
        </Tab>
        
        <Tab Title="Novedades" Icon="novedades.png">
            <ShellContent ContentTemplate="{DataTemplate local:Novedades}" Route="Novedades" />
        </Tab>
        
        <Tab Title="Comunidades" Icon="comunidades.png">
            <ShellContent ContentTemplate="{DataTemplate local:Comunidades}" Route="Comunidades" />
        </Tab>
        
        <Tab Title="Llamadas" Icon="telefono.png">
            <ShellContent ContentTemplate="{DataTemplate local:Llamadas}" Route="Llamadas" />
        </Tab>
    </TabBar>
    

</Shell>
